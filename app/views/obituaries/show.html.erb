<!-- Title -->
<h1> <%= @obituary.name %> </h1>


<!-- Date/Time -->
<p>
  <strong>Birth date:</strong>
  <%= @obituary.birth_date %>
</p>

<p>
  <strong>Death date:</strong>
  <%= @obituary.death_date %>
</p>

<hr>

<!-- Preview Image -->
<p>
  <% @obituary.obituary_images.each do |i| %>
    <%= image_tag i.image.url(:medium), class: "img-responsive" %>
  <% end %>
</p>
